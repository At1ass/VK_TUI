{
  "productName": "VK Messenger",
  "version": "0.1.0",
  "identifier": "com.vk.messenger",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "gstreamer1.0-plugins-good",
          "gstreamer1.0-plugins-bad",
          "gstreamer1.0-libav"
        ]
      }
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VK Messenger",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' https://sun9-*.userapi.com https://*.vk.com https://*.vk.me https://*.vkuseraudio.net blob: data:; media-src 'self' https://sun9-*.userapi.com https://*.vk.com https://*.vk.me https://*.vkuseraudio.net blob: data:; style-src 'self' 'unsafe-inline'"
    }
  }
}
