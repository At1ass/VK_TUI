{
  "productName": "VK Messenger",
  "version": "0.1.0",
  "identifier": "com.vk.messenger",
  "build": {
    "beforeDevCommand": "cd ui && npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ui && npm run build",
    "frontendDist": "dist"
  },
  "bundle": {
    "active": true,
    "targets": ["appimage", "deb"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.png"
    ],
    "linux": {
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "gstreamer1.0-plugins-good",
          "gstreamer1.0-plugins-bad",
          "gstreamer1.0-libav"
        ],
        "desktopTemplate": "assets/vk-messenger.desktop"
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "android": {
      "minSdkVersion": 24
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "VK Messenger",
        "width": 1024,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  }
}
